<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        />





    <ImageButton
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:id="@+id/history"
        android:background="@drawable/myhistoryicon"
        android:layout_above="@+id/mycircle"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="65dp"
        android:layout_toLeftOf="@+id/hascorona"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/nearme"
        android:background="@drawable/nearme"
        android:layout_toRightOf="@id/hascorona"
        android:layout_above="@id/search"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="60dp"
        />

    <ImageButton
        android:id="@+id/hascorona"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/reportinfectionicon"
        />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/settingsicon"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/mycircle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/groupicon"
        android:layout_toLeftOf="@+id/settings"
        android:layout_marginRight="15dp"/>

    <ImageButton
        android:id="@+id/search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/searchicon"
        android:layout_toRightOf="@+id/settings"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>

    <ImageButton
        android:id="@+id/resources"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/resourcesicon"
        android:layout_toRightOf="@+id/search"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"

        />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home"
        android:layout_toLeftOf="@+id/mycircle"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/home"
        android:layout_marginBottom="5dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/historytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_above="@+id/history"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/reporttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Infection"
        android:layout_above="@+id/hascorona"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/nearmetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Near Me"
        android:layout_above="@+id/nearme"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="9dp"/>


    <View
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@color/selectedicon"
        android:layout_marginLeft="44dp"/>

</RelativeLayout>